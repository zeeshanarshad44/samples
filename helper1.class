 public static void charRead1() {
        FileReader fileReader = null;
        FileWriter fileWriter = null;
        try {
            fileReader = new FileReader(new File("/Users/maweiyi/Code/JavaProject/LL/1.txt"));
            fileWriter = new FileWriter(new File("./src/me/maweiyi/tt.txt"));
           
            int pos;
            char[] buffer = new char[1024];
            while ((pos = fileReader.read(buffer)) != -1) {
                fileWriter.write(buffer, 0, pos);
                fileWriter.flush();
            }
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            if (fileReader != null) {
                try {
                    fileReader.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
            if (fileWriter != null) {
                try {
                    fileWriter.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
    }
    
